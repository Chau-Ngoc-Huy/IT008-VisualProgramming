<Page x:Class="GoninDigital.Views.DashBoardPages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoninDigital.Views.DashBoardPages"
      xmlns:uc="clr-namespace:GoninDigital.SharedControl"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignWidth="1000"
      DataContext="{StaticResource HomePageVM}"
      Background="{DynamicResource AppBackgroundBrush}"
      Title="CartPage">


    <ScrollViewer >
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" >
                <Grid  Margin="10 10 10 40"
                       Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition  />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                            <ui:SimpleStackPanel Width="40" HorizontalAlignment="Center"
                                 VerticalAlignment="Center">
                                <CheckBox Margin="10"/>
                            </ui:SimpleStackPanel>
                            <Label Content="Image" Margin="18"
                                   VerticalAlignment="Center"
                                   />
                            <Label Content="Product"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   />
                        </StackPanel>
                    <Label Grid.Column="1" Content="Price"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                    <Label Grid.Column="2" Content="Quantity"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                    <Label Grid.Column="3" Content="Total Price"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                    <Label Grid.Column="4" Content="Remove"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                </Grid>

                <uc:CartItem Title="Ram" Margin="10 20 10 0"
                             TotalPrice="100.000"
                             Price="100.000"
                            />
                <uc:CartItem Title="Ram" Margin="10 25 10 0"
                             TotalPrice="100.000"
                             Price="100.000"
                             />
                <uc:CartItem Title="Ram" Margin="10 25 10 0"
                             TotalPrice="100.000"
                             Price="100.000"
                             />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
